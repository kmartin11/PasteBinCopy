<head>
<style>
textarea {
	height:300px !important;
	}
</style>
<body>
<div class="form-group col-sm-12">
<%= simple_form_for @paste do |f| %>
	<%= f.input :description, label: "New Paste", :class => "des" %>
	<% if user_signed_in? %>
	<%= f.hidden_field :user_email, value: current_user.email %>
	<%= f.hidden_field :username, value: current_user.username %>
	<% else %>
	
	<% end %>
		<div style="border-bottom: 1px solid lightgray"><h5 style="font-weight:bold">Optional Paste Settings</h5></div>
	<div class="col-sm-7">

	<br>
	<%= f.input :title, label: "Paste Name / Title: ", :input_html => { :value => 'Untitled' } %>
	<%= f.button :submit, class: "btn" %>
	</div>
	<div class="col-sm-5" style="border-left: 1px solid #DDDDDD;">
	<span class="glyphicon glyphicon-user" style="font-size:42px; border: 1px solid #DDDDDD; margin-top:5px; padding-top:5px; padding-left:5px; padding-right:5px; float:left; background-color:#F5EEE5; color:#F2CEA5;"></span>
	
	<% if user_signed_in? %>
	
	
	 &nbsp; &nbsp;<span style="font-weight:bold;"><%= current_user.username %></span><br>
	 &nbsp; &nbsp;	<div class="btn-group">
	 	<%= link_to "My Pastebins", profile_path, class:"btn-default btn-sm", style: "background-color:#E3E3E3" %>
		</div>
		<br>
		
	<% else %>
		 &nbsp; &nbsp; <span style="font-weight:bold;">Guest</span><br>
	 &nbsp; &nbsp;	<div class="btn-group">
	 	<%= link_to "Sign up", new_user_registration_path, class:"btn-default btn-sm", style: "background-color:#E3E3E3" %> or
		<%= link_to "Login", new_user_session_path, class:"btn-default btn-sm", style: "background-color:#E3E3E3" %>
		</div>
		<br>
		
	<% end %>
	
	</div>
<% end %>
</div>
</body>