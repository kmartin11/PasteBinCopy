
<div class="row">
	<div class="col-xs-2.5 col-sm-2.5 col-lg-2"></div>
	<div class="col-xs-6.5 col-sm-6.5 col-lg-6" style="border: 1px solid #ddd; z-index:3; border-radius:2px;">
	
	<div style="padding-top:-18px !important;     margin-top: -18px !important;  padding-bottom:10px;  clear:both; width:100%; overflow:hidden;">
	<h3 style="color:#858585;">
		<span style="float:left;font-size:0.7em; color:#BBBBBB; margin-top:5px; padding-right:10px;" class="glyphicon glyphicon-circle-arrow-right"></span>
		<span style="border-right:1px solid #D7D7D7; float:left; width:50%; ">Log in</span> 
		
		<a href="<%= new_user_registration_path %>">
		<span style="float:left;font-size:0.7em; color:#BBBBBB; margin-top:3px; padding-right:10px; padding-left:10px;" class="glyphicon glyphicon-plus"></span>
		<span style="float:left;">Sign Up</span></a>
	</h3>
	

	</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
	  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div><br>
  <div style="width:100%; clear:both;">
	<span style="float:left;"><%= link_to "Forgot your password?", new_user_password_path %></span>
    <span style="float:right; margin-top:-10px !important;"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></span>
	</div>
  </div>


<% end %><br>

	</div>
	<div class="col-xs-2.5 col-sm-2.5 col-lg-2"></div>

</body>